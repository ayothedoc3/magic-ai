# MagicAI + SEO Extension - Coolify Environment Variables
# Copy these to Coolify's Environment Variables section

# Application
APP_NAME="MagicAI SEO"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_KEY=base64:YOUR_APP_KEY_HERE

# Database (Coolify MySQL service)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=magicai
DB_USERNAME=magicai_user
DB_PASSWORD=CHANGE_THIS_PASSWORD

# Claude API (REQUIRED - Get from console.anthropic.com)
ANTHROPIC_API_KEY=sk-ant-api03-YOUR_KEY_HERE

# SEO Extension Configuration
SEO_AUTOMATION_ENABLED=true
SEO_CLAUDE_MODEL=claude-sonnet-4-5-20250929
SEO_CLAUDE_MAX_TOKENS=4000

# SEO Crawler Settings
SEO_CRAWLER_TIMEOUT=30
SEO_CRAWLER_USER_AGENT="Mozilla/5.0 (compatible; SEOBot/1.0)"
SEO_CRAWLER_MAX_PAGES=10

# SEO Content Settings
SEO_CONTENT_MIN_WORDS=1500
SEO_CONTENT_MAX_WORDS=2500
SEO_CONTENT_INCLUDE_FAQ=true
SEO_CONTENT_INCLUDE_SCHEMA=true

# SEO Keywords Settings
SEO_KEYWORDS_DEFAULT_COUNT=50
SEO_KEYWORDS_MAX_COUNT=200

# SEO Indexing Settings
SEO_AUTO_SUBMIT_TO_GOOGLE=true
SEO_INDEXING_CHECK_INTERVAL=24

# Optional: External APIs (can add later)
SEO_SERP_API_KEY=
SEO_GOOGLE_API_KEY=
SEO_GOOGLE_CLIENT_ID=
SEO_GOOGLE_CLIENT_SECRET=

# Cache & Session
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=database

# Mail (Optional - for notifications)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=info

# MagicAI Settings (keep existing)
OPENAI_API_SECRET=
OPENAI_DEFAULT_MODEL=gpt-4
STABILITY_API_KEY=
SERPER_API_KEY=
